@{
}
@model Usuario

<h1>Eliminar Usuraio</h1>
<h3>¿Estás seguro que deseas eliminar el siguiente Usuario?</h3>
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dt class="col-sm-10">@Model.Nombre</dt>

    <dt class="col-sm-2">Fecha de nacimiento</dt>
    <dt class="col-sm-10">@Model.FechaNacimiento</dt>

    <dt class="col-sm-2">Sexo</dt>
    <dt class="col-sm-10">@Model.Sexo</dt>
</dl>
<form asp-action="EliminarConfirmado" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>